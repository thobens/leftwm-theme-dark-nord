configuration {
    modi:                           "drun";
    display-drun:                   "Applications";
    show-icons:                     true;
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
    matching:            "fuzzy";
}

* {
    font: "SauceCodePro Nerd Font Semibold 11";
    foreground:                 #f8f8f2;
    foreground-alt:             #a5abb6;
    background-color:           #2e3440b3;
    selected-foreground:        #a3be8c;
    selected-background:        #a3be8c50;
    separatorcolor:             #7c7c7c;
    bordercolor:                #809575;
    highlightcolor:             #809575;
    transparent:                #00000000;
}

#window {
    background-color:               @background;
    text-color:                     @foreground;
	border:							0;
	border-color:					@background;
    border-radius:                  8;
	width:							300px;
    location:                       southwest;
    x-offset:                       8;
    y-offset:                       -40;
}

#prompt {
	background-color: 				@transparent;
	text-color: 					@foreground;
}

#button {
	action:                         "ok";
	str:                            "ï€‚ ";
    font:                           "SauceCodePro Nerd Font Medium 12";
	expand:                         false;
	text-color:                     @foreground;
	background-color:               @transparent;
    vertical-align:                 0;
}

#entry {
    background-color:               @transparent;
    text-color:                     @foreground;
    placeholder:                    "Search";
    placeholder-color:              @foreground-alt;
    expand:                         true;
    vertical-align:                 0;
}

#inputbar {
	children: 						[ button, entry ];
    padding:                        10 10 10 15;
	background-color: 				@transparent;
    border:                         0px 0px 1px dash;
    border-color:                   @separatorcolor;
}

#listview {
    background-color:               @transparent;
    padding:                        0px;
    lines:                          12;
    spacing:                        0px;
    cycle:                          true;
    dynamic:                        true;
}

#element {
    background-color:               @transparent;
    text-color:                     @foreground;
    border-radius:                  8;
    padding:                        10px;
    children: [element-icon, element-text];
}

#element-text {
    font: "SauceCodePro Nerd Font Medium 11";
    background-color: @transparent;
    highlight:                      None #ebcb8b;
    text-color:       inherit;
}

#element-icon {
    size: 0.9em;
    background-color: @transparent;
    text-color:       inherit;
}

#element.selected {
    background-color:               @selected-background;
    text-color:                     @selected-foreground;
	border:							0;
    border-radius:                  8;
}
